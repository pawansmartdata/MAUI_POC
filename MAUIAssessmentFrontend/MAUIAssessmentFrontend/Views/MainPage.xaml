<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MAUIAssessmentFrontend.ViewModels"
             xmlns:model="clr-namespace:MAUIAssessmentFrontend.Models"
             x:Class="MAUIAssessmentFrontend.Views.MainPage"
             
             x:DataType="viewmodels:MainPageViewModel"
             
             >

    <NavigationPage.TitleView>
        <Grid ColumnDefinitions="*,Auto"
              Padding="10,0">
            <Label Text="Home"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#2E3A59"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />

            <Frame Padding="2"
                   HeightRequest="40"
                   WidthRequest="40"
                   CornerRadius="20"
                   BackgroundColor="White"
                   BorderColor="#E0E0E0"
                   HasShadow="True"
                   HorizontalOptions="End"
                   VerticalOptions="Center">
                <Image Source="{Binding ProfileImage}"
                       Aspect="AspectFill"
                       HeightRequest="36"
                       WidthRequest="36"
                       Clip="EllipseGeometry Center=18,18 RadiusX=18 RadiusY=18">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToProfileCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Frame>
        </Grid>
    </NavigationPage.TitleView>

    <Grid RowDefinitions="Auto, *" Padding="20">

        <!-- Header Section -->
        <VerticalStackLayout Spacing="16" Grid.Row="0">

            <!-- Welcome and Profile -->
            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                <Label Text="{Binding UserName, StringFormat='Hello, {0} ðŸ‘‹'}"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#2E3A59"
                       VerticalOptions="Center" />

                <Frame Padding="2"
                       HeightRequest="48"
                       WidthRequest="48"
                       CornerRadius="24"
                       BackgroundColor="#FFFFFF"
                       BorderColor="#E0E0E0"
                       HasShadow="True"
                       HorizontalOptions="End"
                       VerticalOptions="Center">
                    <Image Source="{Binding ProfileImage}"
                           Aspect="AspectFill"
                           HeightRequest="44"
                           WidthRequest="44"
                           Clip="EllipseGeometry Center=22,22 RadiusX=22 RadiusY=22">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoToProfileCommand}" />
                        </Image.GestureRecognizers>
                    </Image>
                </Frame>
            </Grid>

            <!-- Add Item Button -->
            <Button Text="âž• Add New Restaurant"
                    Command="{Binding GoToAddItemCommand}"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="#FF7043"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="14"
                    Padding="14,10"
                    Margin="0"
                    Shadow="{Shadow Brush=Black, Offset='0,4', Opacity=0.2}" />

            <!-- Search Bar -->
            <SearchBar Placeholder="Search items..."
                       Text="{Binding SearchText}"
                       BackgroundColor="#F5F5F5"
                       PlaceholderColor="#888"
                       TextColor="#000"
                       FontSize="16"
                       HeightRequest="46"
                       Margin="0,10,0,0"
                       SearchCommand="{Binding SearchCommand}" />
        </VerticalStackLayout>

        <!-- Search Bar -->
        <!--<Frame BackgroundColor="#FFFFFF"
       CornerRadius="14"
       Padding="0"
       HasShadow="False"
       BorderColor="#DDD"
       HeightRequest="50">
            <SearchBar Placeholder="Search items..."
               Text="{Binding SearchText}"
               BackgroundColor="Transparent"
               PlaceholderColor="#888"
               TextColor="#000"
               FontSize="16"
               Margin="10,0"
               HeightRequest="50"
               SearchCommand="{Binding SearchCommand}" />
        </Frame>-->

        <!-- Item List -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Items}"
                        SelectionMode="None"
                        VerticalOptions="FillAndExpand"
                        Margin="0,20,0,0">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="1"
                                 HorizontalItemSpacing="14"
                                 VerticalItemSpacing="14" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:ItemResponseDto">
                    <Frame 
                           HasShadow="True"
                           BackgroundColor="White"
                           Padding="0"
                           HeightRequest="200">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainPageViewModel}}, Path=GoToDetailCommand}"
                                CommandParameter="{Binding Id}" />
                        </Frame.GestureRecognizers>

                        <Grid ColumnDefinitions="160,*"
                              Padding="0">
                            <!-- Image -->
                            <Image Source="{Binding ItemImageUrl}"
                                   Aspect="AspectFill"
                                   WidthRequest="160"
                                   HeightRequest="200"
                                   Clip="RectangleGeometry Rect='0,0,160,200'" />

                            <!-- Details -->
                            <VerticalStackLayout Grid.Column="1"
                                                 Padding="14"
                                                 VerticalOptions="Center">
                                <Label Text="{Binding Name}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#333" />

                                <Label Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="#555"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2" />

                                <Label Text="{Binding Latitude, StringFormat='Lat: {0:F4}'}"
                                       FontSize="12"
                                       TextColor="#888" />
                                <Label Text="{Binding Longitude, StringFormat='Long: {0:F4}'}"
                                       FontSize="12"
                                       TextColor="#888" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>

