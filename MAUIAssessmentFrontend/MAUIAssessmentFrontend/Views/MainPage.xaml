<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MAUIAssessmentFrontend.ViewModels"
             xmlns:model="clr-namespace:MAUIAssessmentFrontend.Models"
             x:Class="MAUIAssessmentFrontend.Views.MainPage"
             Title="Home">

    


    <VerticalStackLayout Padding="10" Spacing="10">

        

        <!-- Custom Top Header -->
        <Grid ColumnDefinitions="*,Auto">
            <Label Text="{Binding UserName, StringFormat='Welcome, {0}'}"
                   FontSize="20"
                   VerticalOptions="Center"
                   TextColor="Black" />

            <Frame Padding="2"
                   HeightRequest="40"
                   WidthRequest="40"
                   CornerRadius="20"
                   HasShadow="False"
                   VerticalOptions="Center"
                   HorizontalOptions="End">
                <Image Source="{Binding ProfileImage}"
                       Aspect="AspectFill"
                       HeightRequest="40"
                       WidthRequest="40">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToProfileCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Frame>
        </Grid>

        <Button Text="Add Item"
            Command="{Binding GoToAddItemCommand}"
            HorizontalOptions="End"
            WidthRequest="340"
            Margin="10"
            BackgroundColor="DodgerBlue"
            TextColor="White"
            CornerRadius="8"
            Padding="12,6" />

        <!-- Main Content: Item Grid -->
        <CollectionView ItemsSource="{Binding Items}"
                        SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="1"
                                 HorizontalItemSpacing="10"
                                 VerticalItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:ItemDto">
                    <Frame HeightRequest="180"
                           CornerRadius="12"
                           Padding="0"
                           HasShadow="True"
                           BackgroundColor="White">
                        <Grid ColumnDefinitions="200,*">
                            <Image Source="{Binding Image}"
                                   Aspect="AspectFill"
                                   WidthRequest="125"
                                   HeightRequest="125" />

                            <VerticalStackLayout Grid.Column="1"
                                                 Padding="10"
                                                 VerticalOptions="Center">
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Description}" FontSize="16" FontAttributes="Italic" />
                                <Label Text="{Binding Latitude, StringFormat='Lat: {0:F4}'}" FontSize="14" />
                                <Label Text="{Binding Longitude, StringFormat='Long: {0:F4}'}" FontSize="14" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
