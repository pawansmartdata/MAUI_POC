<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MAUIAssessmentFrontend.ViewModels"
             xmlns:model="clr-namespace:MAUIAssessmentFrontend.Models"
             x:Class="MAUIAssessmentFrontend.Views.MainPage"
             Title="Home">

    <!--<ContentPage.BindingContext>
        <viewmodels:MainPageViewModel />
    </ContentPage.BindingContext>-->

    <Grid RowDefinitions="Auto, *" Padding="10">

        <!-- Top Bar -->
        <Grid Row="0" ColumnDefinitions="*, Auto" Padding="0,10">
            <Label Text="{Binding UserName, StringFormat='Welcome, {0}'}"
                   FontSize="24"
                   VerticalOptions="Center"
                   HorizontalOptions="StartAndExpand" />

            <Frame Padding="2"
                   HeightRequest="40"
                   WidthRequest="40"
                   HasShadow="False"
                   CornerRadius="20"
                   VerticalOptions="Center"
                   HorizontalOptions="End">
                <Image Source="{Binding ProfileImage}"
                       Aspect="AspectFill"
                       HeightRequest="40"
                       WidthRequest="40">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToProfileCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Frame>
        </Grid>

        <!-- Main Item Grid -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Items}"
                        SelectionMode="None"
                        Margin="0,10,0,0">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="2"
                                 HorizontalItemSpacing="10"
                                 VerticalItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:ItemDto">
                    <Frame HeightRequest="180"
                           CornerRadius="12"
                           Padding="0"
                           HasShadow="True"
                           BackgroundColor="White">
                        <Grid ColumnDefinitions="125,*">
                            <Image Source="{Binding Image}"
                                   Aspect="AspectFill"
                                   WidthRequest="125"
                                   HeightRequest="125" />

                            <VerticalStackLayout Grid.Column="1"
                                                 Padding="10"
                                                 VerticalOptions="Center">
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Latitude, StringFormat='Lat: {0:F4}'}" FontSize="14" />
                                <Label Text="{Binding Longitude, StringFormat='Long: {0:F4}'}" FontSize="14" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
