<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MAUIAssessmentFrontend.ViewModels"
             x:Class="MAUIAssessmentFrontend.Views.ProfilePage"
             Title="My Profile"
             x:DataType="viewmodels:ProfileViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24" BackgroundColor="#FAFAFA">
            <Button Text="Back"
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    HorizontalOptions="Start" />

            <!-- Profile Picture -->
            <Frame Padding="0"
                   HeightRequest="140"
                   WidthRequest="140"
                   CornerRadius="70"
                   IsClippedToBounds="True"
                   HorizontalOptions="Center"
                   BackgroundColor="White"
                   HasShadow="True"
                   BorderColor="#CCCCCC">
                <Image Source="{Binding ProfileImage}"
                       Aspect="AspectFill"
                       HeightRequest="140"
                       WidthRequest="140" />
            </Frame>

            <!-- Name and Info -->
            <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                <Label Text="{Binding UserName}"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#2E3A59" />

                <Label Text="{Binding Email}"
                       FontSize="16"
                       TextColor="#555"
                       FontAttributes="Italic" />

                <Label Text="{Binding PhoneNumber}"
                       FontSize="16"
                       TextColor="#555" />
            </VerticalStackLayout>

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="14" Margin="0,20,0,0">

                <Button Text="âœï¸ Edit Profile"
                        Command="{Binding EditProfileCommand}"
                        BackgroundColor="#42A5F5"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="48" />

                <Button Text="ðŸšª Logout"
                        Command="{Binding LogoutCommand}"
                        BackgroundColor="#E53935"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="48" />

                <!-- Optional: Manual Back Button (remove if using Shell) -->
                <!--<Button Text="â¬… Back"
                        Command="{Binding GoBackCommand}"
                        BackgroundColor="#EEEEEE"
                        TextColor="Black"
                        CornerRadius="10"
                        HeightRequest="40" />-->
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
