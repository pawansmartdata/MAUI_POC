<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIAssessmentFrontend.Views.ProfilePage"
             xmlns:viewmodels="clr-namespace:MAUIAssessmentFrontend.ViewModels"
             Title="Profile">

    <!--<ContentPage.BindingContext>
        <viewmodels:ProfileViewModel />
    </ContentPage.BindingContext> -->

    <VerticalStackLayout Padding="20" Spacing="20">
        <Button Text="Back"
                Command="{Binding GoBackCommand}"
                BackgroundColor="LightGray"
                TextColor="Black"
                HorizontalOptions="Start" />
        

        <Frame Padding="0"
               HeightRequest="120"
               WidthRequest="120"
               CornerRadius="60"
               IsClippedToBounds="True"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HasShadow="False"
               BorderColor="Gray">
                    <Image Source="{Binding ProfileImage}"
                   Aspect="AspectFill"
                   HeightRequest="120"
                   WidthRequest="120" />
        </Frame>
        <Button Text="Edit Profile"
                Command="{Binding EditProfileCommand}"
                HorizontalOptions="FillAndExpand"
                BackgroundColor="DodgerBlue"
                TextColor="White"
                CornerRadius="10"
           
                Padding="10" />

        <Label Text="{Binding UserName}" FontSize="24" HorizontalOptions="Center"/>
        <Label Text="{Binding Email}" FontSize="18" FontAttributes="Italic" HorizontalOptions="Center"/>
        <Label Text="{Binding PhoneNumber}" FontSize="18" HorizontalOptions="Center"/>

        <Button Text="Logout"
                Command="{Binding LogoutCommand}"
                HorizontalOptions="Fill"
                BackgroundColor="Red"
                TextColor="White"
                CornerRadius="10"
                Padding="10" />
    </VerticalStackLayout>
</ContentPage>
