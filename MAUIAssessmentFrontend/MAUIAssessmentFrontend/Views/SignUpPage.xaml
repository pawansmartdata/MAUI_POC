<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIAssessmentFrontend.Views.SignUpPage"
             Title="Sign Up"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Label Text="Create Account"
                   FontSize="32"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource TextColor}" />

            <Entry Placeholder="First Name"
                   Text="{Binding FirstName}"
                   TextColor="{DynamicResource TextColor}"
                   BackgroundColor="{DynamicResource EntryBackgroundColor}" />
            <Entry Placeholder="Last Name"
                   Text="{Binding LastName}"
                   TextColor="{DynamicResource TextColor}"
                   BackgroundColor="{DynamicResource EntryBackgroundColor}" />

            <Entry Placeholder="Email"
                   Text="{Binding Email}"
                   Keyboard="Email"
                   TextColor="{DynamicResource TextColor}"
                   BackgroundColor="{DynamicResource EntryBackgroundColor}" />
            
            <Entry Placeholder="Phone Number"
                   Text="{Binding PhoneNumber}"
                   Keyboard="Telephone"  
                   TextColor="{DynamicResource TextColor}"
                   BackgroundColor="{DynamicResource EntryBackgroundColor}" />

            <!-- Password Entry -->
            <!--<Grid>
                <Entry Placeholder="Password"
           IsPassword="{Binding IsPasswordHidden}"
           Text="{Binding Password}"
           TextColor="{DynamicResource TextColor}"
           BackgroundColor="{DynamicResource EntryBackgroundColor}"
           Margin="0,0,40,0" />
                <ImageButton Source="{Binding PasswordEyeIcon}"
                 Command="{Binding TogglePasswordVisibilityCommand}"
                 BackgroundColor="Transparent"
                 HorizontalOptions="End"
                 VerticalOptions="Center"
                 WidthRequest="24"
                 HeightRequest="24"
                 Margin="0,0,10,0" />
            </Grid>-->

            <!-- Confirm Password Entry -->
            <!--<Grid>
                <Entry Placeholder="Confirm Password"
           IsPassword="{Binding IsConfirmPasswordHidden}"
           Text="{Binding ConfirmPassword}"
           TextColor="{DynamicResource TextColor}"
           BackgroundColor="{DynamicResource EntryBackgroundColor}"
           Margin="0,0,40,0" />
                <ImageButton Source="{Binding ConfirmPasswordEyeIcon}"
                 Command="{Binding ToggleConfirmPasswordVisibilityCommand}"
                 BackgroundColor="Transparent"
                 HorizontalOptions="End"
                 VerticalOptions="Center"
                 WidthRequest="24"
                 HeightRequest="24"
                 Margin="0,0,10,0" />
            </Grid>-->

            <!-- Password Entry -->

            <Grid>
                <Entry x:Name="PasswordEntry"
           Placeholder="Password"
           Text="{Binding Password}"
           IsPassword="{Binding IsPassword, Mode=TwoWay}"
           TextColor="{DynamicResource TextColor}"
           BackgroundColor="{DynamicResource EntryBackgroundColor}" />

                <ImageButton Source="{Binding PasswordEyeIcon}"
                 Command="{Binding TogglePasswordVisibilityCommand}"
                 BackgroundColor="Transparent"
                 WidthRequest="24"
                 HeightRequest="24"
                 HorizontalOptions="End"
                 VerticalOptions="Center"
                 Margin="0,0,10,0"
                 Padding="0" />
            </Grid>

            <!-- Confirm Password Entry -->
            <Grid>
                <Entry x:Name="ConfirmPasswordEntry"
           Placeholder="Confirm Password"
           Text="{Binding ConfirmPassword}"
           IsPassword="{Binding IsConfirmPassword, Mode=TwoWay}"
           TextColor="{DynamicResource TextColor}"
           BackgroundColor="{DynamicResource EntryBackgroundColor}" />

                <ImageButton Source="{Binding ConfirmPasswordEyeIcon}"
                 Command="{Binding ToggleConfirmPasswordVisibilityCommand}"
                 BackgroundColor="Transparent"
                 WidthRequest="24"
                 HeightRequest="24"
                 HorizontalOptions="End"
                 VerticalOptions="Center"
                 Margin="0,0,10,0"
                 Padding="0" />
            </Grid>

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding IsErrorVisible}" />


            <Button Text="Sign Up"
                    Command="{Binding RegisterCommand}"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    TextColor="{DynamicResource ButtonTextColor}" />

            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Already have an account? " 
                              TextColor="{DynamicResource TextColor}"/>
                        <Span Text="Login"
                              TextDecorations="Underline"
                              TextColor="{DynamicResource SecondaryColor}">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}" />
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
