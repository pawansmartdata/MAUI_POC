<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MAUIAssessnentFrontend.Views.AddItemPage"
    Title="Add Item">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Entry Text="{Binding Name}" Placeholder="Name" />
            <Editor Text="{Binding Description}" Placeholder="Description" HeightRequest="100" />
            <Entry Text="{Binding Latitude}" Placeholder="Latitude" Keyboard="Numeric" />
            <Entry Text="{Binding Longitude}" Placeholder="Longitude" Keyboard="Numeric" />

            <Button Text="Save" Command="{Binding SaveCommand}" />
        </StackLayout>
    </ScrollView>
</ContentPage>