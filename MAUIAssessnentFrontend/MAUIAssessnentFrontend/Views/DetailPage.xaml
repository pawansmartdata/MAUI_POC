<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp.Views.DetailPage"
    Title="Item Details">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Entry Text="{Binding Item.Name}" Placeholder="Name" />
            <Editor Text="{Binding Item.Description}" Placeholder="Description" HeightRequest="100" />
            <Entry Text="{Binding Item.Latitude}" Placeholder="Latitude" Keyboard="Numeric" />
            <Entry Text="{Binding Item.Longitude}" Placeholder="Longitude" Keyboard="Numeric" />

            <Button Text="Update" Command="{Binding UpdateCommand}" />
            <Button Text="Delete" Command="{Binding DeleteCommand}" BackgroundColor="Red" TextColor="White"/>

            <Label Text="Location Preview" FontAttributes="Bold" Margin="0,20,0,5"/>
            <Map x:Name="ItemMap"
                 HeightRequest="250"
                 MapType="Street"
                 IsShowingUser="False"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
